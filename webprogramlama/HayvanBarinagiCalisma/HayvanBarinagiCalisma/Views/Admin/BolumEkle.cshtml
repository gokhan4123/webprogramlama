@{
    ViewData["Title"] = "Bolum Ekle";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}



@model Bolum
<div class="container mt-5">
    <h1 style="text-align:center;">Bolum Ekle</h1>
    <form class="w-75 m-auto" method="post">
        <div class="form-group">
            <label asp-for="BolumAdi"></label>
            <input asp-for="BolumAdi" class="form-control" />
            <span asp-validation-for="BolumAdi" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-primary float-right">Kaydet</button>
    </form>

</div>
<div class="container mt-2">
    <p class="w-75 text-primary text-center">@ViewBag.Mesaj</p>
</div>