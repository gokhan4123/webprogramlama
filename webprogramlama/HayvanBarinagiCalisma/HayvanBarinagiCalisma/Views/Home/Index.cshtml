@using HayvanBarinagiCalisma.Resources
@inject LocService SharedLocalizer
@{
    ViewData["BirinciKutu"] = SharedLocalizer.GetLocalizedHtmlString("BirinciKutu");
    ViewData["BirinciKutuIcerik"] = SharedLocalizer.GetLocalizedHtmlString("BirinciKutuIcerik");

    ViewData["ikinciKutu"] = SharedLocalizer.GetLocalizedHtmlString("ikinciKutu");
    ViewData["ikinciKutuIcerik"] = SharedLocalizer.GetLocalizedHtmlString("ikinciKutuIcerik");

    ViewData["UcuncuKutu"] = SharedLocalizer.GetLocalizedHtmlString("UcuncuKutu");
    ViewData["UcuncuKutuIcerik"] = SharedLocalizer.GetLocalizedHtmlString("UcuncuKutuIcerik");

    ViewData["SliderBir"] = SharedLocalizer.GetLocalizedHtmlString("SliderBir");
    ViewData["SliderIki"] = SharedLocalizer.GetLocalizedHtmlString("SliderIki");
    ViewData["SliderUc"] = SharedLocalizer.GetLocalizedHtmlString("SliderUc");

    ViewData["SliderBirIcerik"] = SharedLocalizer.GetLocalizedHtmlString("SliderBirIcerik");
    ViewData["SliderIkiIcerik"] = SharedLocalizer.GetLocalizedHtmlString("SliderIkiIcerik");
    ViewData["SliderUcIcerik"] = SharedLocalizer.GetLocalizedHtmlString("SliderUcIcerik");

}
@{
    ViewData["Title"] = "Anasayfa";
}

<div id="carouselExampleIndicators" class="carousel slide w-75 m-auto shadow rounded" data-ride="carousel">
    <ol class="carousel-indicators">
        <li data-target="#carouselExampleIndicators" data-slide-to="0" class="active"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="1"></li>
        <li data-target="#carouselExampleIndicators" data-slide-to="2"></li>
    </ol>
    <div class="carousel-inner rounded">
        <div class="carousel-item active">
            <img class="d-block w-100" src="~/img/slider1.jpg" alt="First slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@ViewData["SliderBir"]</h5>
                <p>@ViewData["SliderBirIcerik"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/slider2.jpg" alt="Second slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@ViewData["SliderIki"]</h5>
                <p>@ViewData["SliderIkiIcerik"]</p>
            </div>
        </div>
        <div class="carousel-item">
            <img class="d-block w-100" src="~/img/slider3.jpg" alt="Third slide">
            <div class="carousel-caption d-none d-md-block">
                <h5>@ViewData["SliderUc"]</h5>
                <p>@ViewData["SliderUcIcerik"]</p>
            </div>
        </div>
    </div>
    <a class="carousel-control-prev" href="#carouselExampleIndicators" role="button" data-slide="prev">
        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="carousel-control-next" href="#carouselExampleIndicators" role="button" data-slide="next">
        <span class="carousel-control-next-icon" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<div class="row mt-4 mb-3">

    <div class="col-md-4 p-1">
        <div class="card text-white bg-dark shadow" style="max-width: 18rem;">
            <div class="card-header">@ViewData["BirinciKutu"]</div>
            <div class="card-body">
                @*<h5 class="card-title">Primary card title</h5>*@
                <p class="card-text">
                    @ViewData["BirinciKutuIcerik"]
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4 p-1">
        <div class="card bg-light shadow" style="max-width: 18rem;">
            <div class="card-header">@ViewData["ikinciKutu"]</div>
            <div class="card-body">
                @*<h5 class="card-title">Primary card title</h5>*@
                <p class="card-text">
                    @ViewData["ikinciKutuIcerik"]
                </p>
            </div>
        </div>
    </div>
    <div class="col-md-4 p-1">
        <div class="card text-white bg-dark shadow" style="max-width: 18rem;">
            <div class="card-header">@ViewData["UcuncuKutu"]</div>
            <div class="card-body">
                @*<h5 class="card-title">Primary card title</h5>*@
                <p class="card-text">
                    @ViewData["UcuncuKutuIcerik"]
                </p>
            </div>
        </div>
    </div>
</div>

